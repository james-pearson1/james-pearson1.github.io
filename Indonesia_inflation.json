{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Inflation in Indonesia 1980-2015",
    "anchor": "start",
    "subtitle": "Source: BPS through ECO API",
    "fontSize": "15",
    "subtitleFontSize": "10",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "height": "250",
  "width": "500",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "#ffffff",
  "view": {
    "fill": "#ffffff",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/idn/infl?vega",
    "format": {
      "type": "json"
    }
  },
  "mark": {
    "type": "line",
    "color": "#f4134d",
    "strokeWidth": "1"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "Year",
        "titleColor": "#122B39",
        "grid": false
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "CPI (%)",
        "titleColor": "#122B39",
        "grid": true
      }
    }
  }
}
